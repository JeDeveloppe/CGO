{% extends 'site/base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
    
    <h1 class="col-12 text-center h3 mb-5">Calculs distances</h1>

    <div class="row justify-content-around">
        <div class="col-12 col-lg-5 p-0">
            <div class="card col-12 text-center py-5 border-primary p-0">
                <div class="form-group">
                    {# on affiche le formulaire #}
                    {{ form_start(form) }}
                        {{ form_row(form.search) }}
                        <div class="col-12 p-0 text-center mt-2">
                            <button class="btn btn-lg btn-success" type="submit">Calculer</button>
                            <a class="btn btn-lg btn-warning" href="{{ path('app_site_calcul_distance') }}">Reset</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 mt-3 mt-lg-0">
            {# s'il y a une recherche #}
            {% if datas | length > 0 %}
                <div class="card col-11 mx-auto border-primary p-2">
                    <table class="table text-center align-middle">
                        <thead>
                            <th>Centre</th>
                            <th>Distance</th>
                            <th>Temps de trajet</th>
                        </thead>
                        <tbody class="table-distance text-light">
                            {% for data in datas %}
                                {% set dureeEnSecondes = data.duration %}
                                {% set hours = (dureeEnSecondes / 3600) %60 | round %}
                                {% set minutes = (dureeEnSecondes / 60) %60 | round %}
                                <tr>
                                    <td>{{ data.shop.name }}</td>
                                    <td>{{ data.distance / 1000 }} KMS</td>
                                    <td>
                                        {% if hours > 0 %}
                                            {{ hours }} H
                                        {% endif %}
                                        {{ minutes }} min
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="card col-12 text-center d-flex flex-column justify-content-around border-primary h-100">
                En attente du lieu d'intervention...
                </div>
            {% endif %}
        </div>
    </div>



{% endblock %}
