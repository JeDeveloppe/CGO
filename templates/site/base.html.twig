<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} | CGO Helper</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('/css/site/template_bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/site/design.css') }}">

        <script src="https://kit.fontawesome.com/440b1b0c24.js" crossorigin="anonymous"></script>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="pt-4 p-1 pt-md-4 p-md-3 pt-lg-4 p-lg-5 vh-100">
        <section class="card d-flex flex-column justify-content-beetween h-100">
            <div class="col-12">
                <a class="col-6" href="{{ path('app_dashboard') }}">
                    <img src="{{ asset('images/design/logo.png') }}" class="position-absolute logoTop img-thumbnail border border-primary" alt="Logo Refaitesvosjeux.fr">
                </a>
            </div>

            {% include "site/nav.html.twig" %}

            <div class="container-fluid vh-100">
                {% block body %}{% endblock %}
            </div>

            {% include "site/footer.html.twig" %}

        </section>
    {% block javascripts %}
        <script type="text/javascript">
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
    {% endblock %}
    </body>
</html>
